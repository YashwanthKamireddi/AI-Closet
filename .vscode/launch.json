{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/start.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Setup Database",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/setup-local-db.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Manual Database Setup",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/manual-db-setup.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "VS Code Setup",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/setup-vscode.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "console": "integratedTerminal"
    }
  ]
}