{
  "workflows": [
    {
      "name": "Start application",
      "command": "node start.js",
      "restartOn": {
        "files": [
          "server/**/*.ts",
          "client/src/**/*.tsx",
          "client/src/**/*.ts",
          "shared/**/*.ts"
        ]
      },
      "runAtStart": true,
      "clearPreviousLogs": true,
      "primary": true,
      "ports": [
        3000, 3001
      ]
    }
  ]
}