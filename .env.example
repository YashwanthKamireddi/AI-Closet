# Database Configuration
# Replace with your PostgreSQL credentials
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wardrobe_app
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=wardrobe_app
PGPORT=5432

# Session Secret (generate a strong random string)
SESSION_SECRET=your_session_secret_change_this

# Port Configuration
PORT=3000

# API Keys for External Services
# Get your OpenAI API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key

# Weather API not implemented yet, but reserved for future use
WEATHER_API_KEY=your_weather_api_key

# Node Environment (development, production, test)
NODE_ENV=development

# Debug Mode (set to true for verbose logging)
DEBUG=false

# Uncomment this line if you want to use a Neon serverless database instead of local PostgreSQL
# NEON_DATABASE_URL=postgres://user:password@endpoint/neondb